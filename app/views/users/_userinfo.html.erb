<div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100, 100) do %>
        <%= user_path(@user.id) %>
      <% end %>
      <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
      </table>
      <div class="row">
      <%# if user == current_user %>
        <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block mb-3" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      <%# else %>
      </div>
      <%# end %>
      <h2>New book</h2>
      <%= form_with model: book, url: {controller: 'books', action: 'create'} do |f| %>
        <div class="form-group">
          <label for="title">Title</label><br>
          <%= f.text_field :title, id: "title" %>
        </div>
        <div class="form-group">
          <label for="opinion">Opinion</label><br>
          <%= f.text_area :body, id: "opinion" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
