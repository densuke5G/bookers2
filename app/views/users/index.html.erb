<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<div class="container">
  <div class="row">
    <%= render 'users/userinfo', user: @user, book: @book %>
    <div class="col">
      <h2>Users</h2>
      <table>
        <thead>
            <tr>
              <th>image</th>
              <th>Title</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= image_tag user.get_profile_image(80, 80) %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
