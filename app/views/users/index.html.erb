<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/userinfo', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
            <tr>
              <th>image</th>
              <th>Name</th>
              <th colspan="4"></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= image_tag user.get_profile_image(80, 80) %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td>フォロー数: <%= user.following_user %></td>
              <td>フォロワー数: <%= user.followed_user %></td>
              
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
