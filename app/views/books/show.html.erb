
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/userinfo', user: @user, book: @bookp %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(100, 100) %><br>
                  <%= "#{@user.name}" %>
                <% end %>
              </td>
              <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
              <% end %>

              <!--部分テンプレートいいね-->
              <td id="favorite_buttons_<%= @book.id %>">
                <%= render "favorites/favorite", book: @book %>
              </td>

              <%# if @book.favorited_by?(current_user) %>
              <!--  <td>-->
                  <%#= link_to book_favorites_path(@book), method: :delete, class: "text-danger" do %>
                    <%#= @book.favorites.count %>
                   <%# end %>
              <!--  </td>-->
              <%# else %>
              <!--  <td>-->
                  <%#= link_to book_favorites_path(@book), method: :post do %>
                    <%#= @book.favorites.count %>
                  <%# end %>
              <!--  </td>-->
              <%# end %>

              <td>コメント数:<%= @book.book_comments.count %></td>
            </tr>
        </tbody>
      </table>
      <div class="col">
        <% @book.book_comments.each do |book_comment| %>
          <p><%= image_tag book_comment.user.get_profile_image(100, 100) %></p>
          <%= book_comment.user.name %>
          <%= book_comment.comment %>
          <% if book_comment.user_id == current_user.id %>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
          <% end %>
        <% end %>
      </div>
      <div class="col">
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "comment", style: "width:100%" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
