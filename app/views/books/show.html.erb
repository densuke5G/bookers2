
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--<div class="col">-->
      <%= render 'users/userinfo', user: @user, book: @book %>
    <!--</div>-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(100, 100) %><br>
                  <%= "#{@user.name}" %>
                <% end %>
              </td>
              <td><%= link_to "#{@bookp.title}", book_path(@bookp.id) %></td>
              <td><%= @bookp.body %></td>
              <% if @user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@bookp.id), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@bookp), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
