
<div class="container">
  <div class="row">
    <div class="col">
      <%= render 'users/userinfo', user: @user, book: @book %>
    </div>
    <div class="col">
      <h2>Book detail</h2>
      <table>
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(100, 100) %><br>
                  <%= "#{@user.name}" %>
                <% end %>
              </td>
              <td><%= link_to "#{@bookp.title}", book_path(@bookp.id) %></td>
              <td><%= @bookp.body %></td>
              <% if @user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@bookp.id) %></td>
                <td><%= link_to "Destroy", book_path(@bookp), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
